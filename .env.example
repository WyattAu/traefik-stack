# .env

# ----------------------------------------------------------------
# General Settings
# ----------------------------------------------------------------
# Timezone for all services
TZ=Europe/London

# User and Group ID for file permissions. Run `id yourusername` on the TrueNAS shell.
PUID=1000
PGID=1000

# ----------------------------------------------------------------
# Domain & Traefik Settings
# ----------------------------------------------------------------
# Your root domain
DOMAIN=your-domain.com

# Your email for Let's Encrypt SSL certificate registration
CLOUDFLARE_EMAIL=your-email@example.com

# Your Cloudflare API Token (created in prerequisites)
CLOUDFLARE_DNS_API_TOKEN=your_cloudflare_api_token_here

# ----------------------------------------------------------------
# Volume Paths on TrueNAS
# ----------------------------------------------------------------
# Base path for all application data
APP_DATA_PATH=/mnt/your-pool/apps/yourlab

# ----------------------------------------------------------------
# Authentik Settings
# ----------------------------------------------------------------
# Generate these with `openssl rand -base64 32` and `openssl rand -base64 24`
AUTHENTIK_SECRET_KEY=generate_a_strong_secret_key
AUTHENTIK_PG_PASS=generate_a_strong_db_password

# ----------------------------------------------------------------
# Seafile Settings
# ----------------------------------------------------------------
# Generate this with `openssl rand -base64 32`
SEAFILE_DB_PASSWORD=generate_a_strong_db_password