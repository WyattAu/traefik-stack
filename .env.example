# === CORE TRAEFIK CONFIGURATION ===
TRAEFIK_VERSION=v3.0
TRAEFIK_NETWORK=traefik_network
TRAEFIK_LOG_LEVEL=INFO
TRAEFIK_TIMEZONE=UTC

# === CLOUDFLARE CONFIGURATION ===
CF_API_EMAIL=your-email@example.com
CF_DNS_API_TOKEN=your-cloudflare-dns-api-token-here
CF_ZONE_ID=your-cloudflare-zone-id-here
CF_DOMAIN=example.com
CF_PROXIED=true

# === ACME/LETSENCRYPT CONFIGURATION ===
ACME_EMAIL=your-email@example.com
ACME_STORAGE=/acme.json
ACME_CA_SERVER=https://acme-v02.api.letsencrypt.org/directory

# === SECURITY CONFIGURATION ===
BASIC_AUTH_USER=admin
BASIC_AUTH_PASSWORD_HASH=$2y$10$example_hash_here
SECRET_KEY=your-super-secret-key-here-change-this-in-production
JWT_SECRET=your-jwt-secret-here

# === SERVICE DOMAINS ===
TRAEFIK_DOMAIN=traefik.${CF_DOMAIN}
GITEA_DOMAIN=git.${CF_DOMAIN}
AUTHENTIK_DOMAIN=auth.${CF_DOMAIN}
SEAFILE_DOMAIN=files.${CF_DOMAIN}

# === DATABASE CONFIGURATION ===
POSTGRES_USER=postgres_user
POSTGRES_PASSWORD=generate_secure_password_here
POSTGRES_DB=database_name
REDIS_PASSWORD=redis_secure_password_here

# === NETWORK CONFIGURATION ===
TRAEFIK_HTTP_PORT=80
TRAEFIK_HTTPS_PORT=443
TRAEFIK_API_PORT=8080

# === PERFORMANCE TUNING ===
TRAEFIK_MAX_IDLE_CONNS=100
TRAEFIK_IDLE_TIMEOUT=180s
TRAEFIK_READ_TIMEOUT=300s
TRAEFIK_WRITE_TIMEOUT=300s
TRAEFIK_KEEP_ALIVE=180s
